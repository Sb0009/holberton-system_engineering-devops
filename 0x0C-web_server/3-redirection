#!/usr/bin/env bash
# redirect me.
sudo -s apt-get update && sudo -s apt-get install nginx -y

sudo echo "Hello World" > /var/www/html/index.nginx-debian.html

sudo sed -i '/server_name _;/a location /redirect_me { rewrite ^ https://youtube.com/clip/UgkxW-QVVHvP0Z0iUFpK9TERbdGU2aQIJCpn/ permanent; }' /etc/nginx/sites-available/default
sudo service nginx restart
